{
  "name": "notesai-se",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron:main": "tsc -p tsconfig.electron.json && node scripts/copy-preload.cjs && cross-env NODE_ENV=development electron .",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run dev:electron:main\"",
    "build": "tsc -b && vite build",
    "build:electron:main": "tsc -p tsconfig.electron.json && node scripts/copy-preload.cjs",
    "build:electron": "npm run build:electron:main && npm run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "preview": "vite preview",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:electron": "playwright test -c playwright.electron.config.ts",
    "rebuild:electron": "electron-rebuild -f -w better-sqlite3",
    "start:desktop": "powershell -ExecutionPolicy Bypass -File scripts/start.ps1",
    "start:desktop:rebuild": "powershell -ExecutionPolicy Bypass -File scripts/start.ps1 -Rebuild",
    "stop:desktop": "powershell -ExecutionPolicy Bypass -File scripts/stop.ps1"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "@tiptap/react": "^2.11.1",
    "@tiptap/starter-kit": "^2.11.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router-dom": "^6.26.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/better-sqlite3": "^7.6.10",
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.3",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.3.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  }
}
